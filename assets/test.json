[
    {"$assemble": {
        "erd": "./assets/schema.json",
        "entity": "Customer",
        "project": ["customerName", "customerAddress"],
        "subassemble": [{
            "entity": "Account",
            "join": "inner",
            "project": ["orderDate", "orderAmount"],
            "filter": {"$and": [
                {"$eq": ["$Customer.customerId", "$Account._id"]},  
                {"$gt": ["$Customer.customerName", "K"]}
            ]}
        }]
    }},
    {"$limit": 10},
    {"$skip": 0}
]
