[
    {"$assemble": {
        "erd": "./assets/schema.json",
        "entity": "Customer",
        "project": ["customerName", "customerAddress"],
        "subassemble": [{
            "entity": "Account",
            "join": "inner",
            "project": ["orderDate", "orderAmount"],
            "filter": {"customerId": "$_id"}
        }]
    }},
    {"$sort": {
        "customerName": 1
    }},
    {"$limit": 10},
    {"$skip": 0}
]
